<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <!-- ================= PERMISOS ================= -->

    <!-- Android 12+ (API 31 en adelante) requiere permisos más específicos -->

    <!-- Permiso para escanear dispositivos Bluetooth cercanos -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="31" />

    <!-- Permiso para conectarse a dispositivos Bluetooth (emparejados o conocidos) -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_CONNECT"
        tools:targetApi="31" />

    <!-- Permiso para emitir anuncios Bluetooth LE (si se usara BLE broadcasting) -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADVERTISE"
        tools:targetApi="31" />

    <!-- Compatibilidad con versiones anteriores de Android (pre API 31) -->

    <!-- Permiso general para usar Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!-- Permiso para realizar acciones administrativas como emparejar -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- Permisos de ubicación -->

    <!-- Permisos de ubicación (requeridos para escaneo Bluetooth en Android < 12) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        tools:ignore="CoarseFineLocation" />

    <!-- ================= APLICACIÓN ================= -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Osci_1"
        tools:targetApi="31">

        <!-- ========== ACTIVIDAD PRINCIPAL ========== -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Osci_1">
            <intent-filter>
                <!-- Punto de entrada principal de la app -->
                <action android:name="android.intent.action.MAIN" />
                <!-- Marca esta actividad como lanzable desde el launcher del sistema -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- ========== SERVICIO BLUETOOTH ========== -->

        <!-- Servicio personalizado para gestionar la conexión Bluetooth -->
        <service
            android:name="com.example.Vacio.bluetoothService.BluetoothService"
            android:exported="false" />

        <!-- ========== FILE PROVIDER (para compartir archivos como PDF) ========== -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


    </application>

</manifest>